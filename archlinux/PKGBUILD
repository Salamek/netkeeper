pkgname=granad-gatekeeper
pkgver=0.1.0
pkgdesc="BESY GraNad Gatekeeper."
pkgrel=1
arch=('any')
backup=('etc/granad-gatekeeper/config.yml')
license=('PROPRIETARY')
url='https://gitlab.salamek.cz/sadam/granad-gatekeeper'

install=granad_gatekeeper.install
makedepends=('python-setuptools')
depends=(
    'systemd'
    'python'
    'python-yaml'
    'python-docopt'
    'python-huawei-lte-api'
)

prepare() {
  mkdir -p "${srcdir}/${pkgname}"
  cp -R "${srcdir}/../../etc" "${srcdir}/${pkgname}"
  cp -R "${srcdir}/../../granad_gatekeeper" "${srcdir}/${pkgname}"
  cp -R "${srcdir}/../../tests" "${srcdir}/${pkgname}"
  cp -R "${srcdir}/../../setup.py" "${srcdir}/${pkgname}"
  cp -R "${srcdir}/../../requirements.txt" "${srcdir}/${pkgname}"
  cp -R "${srcdir}/../../README.md" "${srcdir}/${pkgname}"
}


package() {
  cd "${srcdir}/${pkgname}"
  python setup.py install --root="$pkgdir/" --optimize=1
}
